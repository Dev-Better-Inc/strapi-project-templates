{
  "name": "project-templates",
  "description": "Includes all required tools and packages to bootstrap full-stack app development using NodeJS stack",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "maintainers": [
    {
      "name": "BN Enginseer",
      "email": "dev@bndigital.co",
      "url": "https://github.com/bn-enginseer"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,sass,scss,less,graphql}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{scss,sass,css,less}": [
      "stylelint --fix"
    ]
  },
  "bin": {
    "eslint": "node_modules/eslint/bin/eslint.js",
    "husky": "node_modules/husky/lib/bin.js",
    "prettier": "node_modules/prettier/bin-prettier.js",
    "stylelint": "node_modules/stylelint/bin/stylelint.js"
  },
  "prettier": "@bn-digital/prettier-config",
  "stylelint": {
    "extends": "@bn-digital/stylelint-config"
  },
  "eslintConfig": {
    "extends": "@bn-digital/eslint-config/typescript"
  },
  "devDependencies": {
    "@bn-digital/commitlint-config": "^2.0.3",
    "@bn-digital/eslint-config": "^2.0.35",
    "@bn-digital/graphql-config": "^2.2.6",
    "@bn-digital/prettier-config": "^2.1.13",
    "@bn-digital/projen": "^0.5.0",
    "@bn-digital/stylelint-config": "^2.0.18",
    "@bn-digital/typescript-config": "^1.2.6",
    "@bn-digital/vault-env": "^1.4.0",
    "@types/node": "^18.15.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "projen": "^0.68.16",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "graphql-codegen": "node_modules/.bin/graphql-codegen",
    "generate": "yarn graphql-codegen && yarn projen",
    "start": "yarn workspaces foreach --exclude=root --parallel --interlaced run start",
    "start:cms": "yarn workspace @project-templates/cms run start",
    "start:website": "yarn workspace @project-templates/website run start",
    "build": "yarn workspaces foreach --exclude=root run build",
    "fix": "yarn prettier --write packages/*/src && yarn eslint --fix packages/*/src && yarn stylelint --fix packages/*/src/**/*.{scss,sass,css,less}",
    "lint": "yarn eslint packages/*/src && yarn stylelint packages/*/src/**/*.{scss,sass,css,less} && yarn prettier --check packages/*/src"
  },
  "packageManager": "yarn@4.0.0-rc.40"
}
