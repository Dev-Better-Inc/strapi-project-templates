{
  "name": "app",
  "description": "Includes all required tools and packages to bootstrap full-stack app development using NodeJS stack",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "maintainers": [
    {
      "name": "BN Enginseer",
      "email": "dev@bndigital.co",
      "url": "https://github.com/bn-enginseer"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,less,graphql}": [
      "yarn prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix"
    ],
    "*.less": [
      "yarn stylelint --fix"
    ]
  },
  "prettier": "@bn-digital/prettier-config",
  "stylelint": {
    "extends": "@bn-digital/stylelint-config"
  },
  "eslintConfig": {
    "extends": "@bn-digital/eslint-config"
  },
  "devDependencies": {
    "@bn-digital/commitlint-config": "^1.3.1",
    "@bn-digital/eslint-config": "^1.19.40",
    "@bn-digital/graphql-config": "^1.2.0",
    "@bn-digital/prettier-config": "^1.15.1",
    "@bn-digital/stylelint-config": "^1.14.3",
    "@types/node": "^18.0.4",
    "concurrently": "^7.2.2",
    "lint-staged": "^13.0.3",
    "pm2": "^5.2.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "prettier": "node_modules/.bin/prettier",
    "stylelint": "node_modules/.bin/stylelint",
    "eslint": "node_modules/.bin/eslint",
    "graphql-codegen": "node_modules/.bin/graphql-codegen",
    "start:graphql": "yarn graphql-codegen --watch",
    "start:cms": "yarn workspace @app/cms run start",
    "start:website": "yarn workspace @app/website run start",
    "start": "concurrently 'yarn:website' 'yarn:cms' 'yarn:generate'",
    "build": "yarn workspaces foreach run build",
    "fix": "yarn prettier --write packages/*/src && yarn eslint --fix packages/*/src/**/*.{ts,tsx} && yarn stylelint --fix packages/*/src/**/*.less",
    "lint": "yarn prettier --check packages/*/src && yarn eslint packages/*/src/**/*.{ts,tsx} && yarn stylelint packages/*/src/**/*.less"
  },
  "packageManager": "yarn@3.2.1"
}
