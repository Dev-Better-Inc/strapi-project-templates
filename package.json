{
  "name": "app",
  "description": "Includes all required tools and packages to bootstrap app development using NodeJS stack",
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-operations": "^1.17.16",
    "@graphql-codegen/typescript-react-apollo": "^2.2.4",
    "@semantic-release/github": "^7.2.2",
    "@semantic-release/npm": "^7.1.3",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "concurrently": "^6.0.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-workspaces": "^0.6.2",
    "graphql": "^15.5.0",
    "node-gyp": "^8.0.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "graphql": "graphql-codegen",
    "cms": "yarn workspace @app/cms run start",
    "website": "yarn workspace @app/website run start",
    "landing": "yarn workspace @app/landing run start",
    "storybook": "yarn workspace @app/storybook run start",
    "fix": "prettier --write packages/*/src && eslint --fix packages/*/src --no-ignore && stylelint --fix packages/*/src",
    "lint": "prettier --check packages/*/src && eslint packages/*/src --no-ignore",
    "start": "concurrently 'yarn:cms' 'yarn:website' 'yarn:graphql'"
  }
}
