{
  "name": "{{cookiecutter.project.name}}",
  "description": "{{cookiecutter.project.description}}",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engineStrict": false,
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-operations": "^1.17.16",
    "@graphql-codegen/typescript-react-apollo": "^2.2.4",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "concurrently": "^6.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-workspaces": "^0.6.2",
    "graphql": "^15.5.0",
    "node-gyp": "^8.0.0",
    "pm2": "^4.5.6",
    "prettier": "^2.3.0",
    "semantic-release": "^17.4.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "graphql": "graphql-codegen",
    "strapi": "yarn workspace @app/strapi run start",
    "react": "yarn workspace @app/react run start",
    "vue": "yarn workspace @app/vue run start",
    "{{cookiecutter.packages.backend}}": "yarn workspace @{{cookiecutter.project.name}}/{{cookiecutter.packages.backend}} run start",
    "html": "yarn workspace @app/html run start",
    "storybook": "yarn workspace @app/storybook run start",
    "fix": "prettier --write packages/*/src && eslint --fix packages/*/src && stylelint --fix packages/*/src/**/*.{vue,less}",
    "lint": "prettier --check packages/*/src && eslint packages/*/src && stylelint --fix packages/*/src/**/*.less",
    "start": "pm2 start ecosystem.json"
  }
}
