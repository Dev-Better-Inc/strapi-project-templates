{
  "name": "bn-digital",
  "description": "Includes all required tools and packages to bootstrap app development using NodeJS stack",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engineStrict": false,
  "devDependencies": {
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/cli": "^6.1.15",
    "@types/node": "^14",
    "chromatic": "^5.6.1",
    "commander": "^7.0.0",
    "create-react-app": "^4.0.1",
    "create-react-native-app": "^3.5.1",
    "create-strapi-app": "^3.4.5",
    "cross-env": "^7.0.3",
    "expo-cli": "^4.1.3",
    "gatsby": "^2.31.1",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "mkcert": "^1.4.0",
    "mkdirp": "^1.0.4",
    "nativefier": "^42.2.0",
    "ngrok": "^3.4.0",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "ts-node": "^9.1.1"
  },
  "scripts": {
    "brand-new:app": "create-react-app --template=pwa-typescript packages/app",
    "brand-new:web": "create-react-app --template=pwa-typescript packages/web",
    "brand-new:api": "create-strapi-app packages/api",
    "brand-new:mobile": "create-react-native-app --template=with-typescript",
    "brand-new:storybook": "storybook-init",
    "brand-new:static": "create-gatsby packages/static",
    "brand-new:http": "serve --ssl-cert=.ssl/tls.crt --ssl-key=.ssl/tls.key --cors",
    "brand-new:ca": "mkdirp .ssl && mkcert create-ca --organization=BNDigital --country-code=UA --state=Kyiv --locality=Kyiv --validity=365 --cert=.ssl/ca.crt --key=.ssl/ca.key",
    "brand-new:cert": "yarn brand-new:ca && mkcert create-cert --cert=.ssl/tls.crt --key=.ssl/tls.key --ca-cert=.ssl/ca.crt --ca-key=.ssl/ca.key --domains='localhost,127.0.0.1,::1,*.local,*.localhost,*.dev'"
  }
}
