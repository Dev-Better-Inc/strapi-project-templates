{
  "name": "project-templates",
  "description": "Includes all required tools and packages to bootstrap full-stack app development using NodeJS stack",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "maintainers": [
    {
      "name": "BN Enginseer",
      "email": "dev@bndigital.co",
      "url": "https://github.com/bn-enginseer"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "installConfig": {
    "hoistingLimits": "workspaces",
    "selfReferences": false
  },
  "workspaces": ["packages/*", "packages/cms/src/plugins/*"],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,sass,scss,less,graphql}": ["yarn prettier --write"],
    "**/*.{ts,tsx}": ["yarn eslint --fix"],
    "**/*.{scss,sass,css,less}": ["yarn stylelint --fix"]
  },
  "prettier": "@bn-digital/prettier-config",
  "stylelint": {
    "extends": "@bn-digital/stylelint-config"
  },
  "eslintConfig": {
    "extends": "@bn-digital/eslint-config"
  },
  "resolutions": {
    "typescript": "4.8.4"
  },
  "devDependencies": {
    "@bn-digital/commitlint-config": "^2.0.0",
    "@bn-digital/eslint-config": "^2.0.6",
    "@bn-digital/prettier-config": "^2.0.3",
    "@bn-digital/stylelint-config": "^2.0.8",
    "@types/node": "^18.8.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "prettier": "node_modules/.bin/prettier",
    "stylelint": "node_modules/.bin/stylelint",
    "eslint": "node_modules/.bin/eslint",
    "start": "yarn workspaces foreach --exclude=root --parallel --interlaced run start",
    "start:cms": "yarn workspace @project-templates/cms run start",
    "start:website": "yarn workspace @project-templates/website run start",
    "build": "yarn workspaces foreach --exclude=root run build",
    "fix": "yarn prettier --write packages/*/src && yarn eslint --fix && yarn stylelint --fix packages/*/src/**/*.{css,scss,less,sass}",
    "lint": "yarn prettier --check packages/*/src && yarn eslint && yarn stylelint packages/*/src/**/*.{css,scss,less,sass}"
  },
  "packageManager": "yarn@4.0.0-rc.25"
}
