{
  "name": "@brand-new/apollo-api-gateway",
  "description": "Enables you to set up an instance of Apollo Server as a gateway that distributes incoming GraphQL operations across one or more subgraphs.",
  "scripts": {
    "start": "concurrently 'yarn:start:apollo' 'yarn:start:faker'",
    "start:apollo": "nodemon src/app.ts",
    "start:faker": "graphql-faker src/graphql/faker.graphql --open"
  },
  "main": "src/app.ts",
  "dependencies": {
    "@apollo/federation": "^0.25.1",
    "@apollo/gateway": "^0.28.2",
    "apollo-datasource-rest": "^0.14.0",
    "apollo-server": "^2.25.0",
    "apollo-server-caching": "^0.7.0",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "graphql-faker": "^2.0.0-rc.24",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
